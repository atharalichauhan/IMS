@model IEnumerable<IMS.Web.ViewModels.CategoryViewModel>

<div class="container-fluid">
  <div id="ui-view">
    <div>
      <link href="~/Content/DataTables-1.10.16/css/dataTables.bootstrap4.css" rel="stylesheet" />
      <div class="animated fadeIn">
        <div class="card">
          <div class="card-header">
            <div class="ml-auto">
              @Html.ActionLink("Add Category", "Create", "", new { @class = "btn btn-primary" })
            </div>
          </div>
          <div class="card-body">
            <div class="dataTables_wrapper container-fluid dt-bootstrap4 no-footer">
              <div class="row">
                <div class="col-sm-12">
                  <table class="table table-striped table-bordered datatable dataTable no-footer" id="dataTable" role="grid" style="border-collapse: collapse !important">
                    <thead>
                      <tr role="row">
                      <th style="width: 180px;">Name</th>
                      <th style="width: 300px;">Description</th>
                      <th style="width: 100px;">Date Created</th>
                      <th style="width: 89px;">Status</th>
                      <th style="width: 192px;">Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                          <td class="sorting_1">@item.Name</td>
                          <td>@item.Description</td>
                          <td>@item.DateOccurred</td>
                          <td>
                            @if (item.IsActive == true)
                            {
                              <span class="badge badge-success">Active</span>
                            }

                            else
                            {
                              <span class="badge badge-dark">Inactive</span>
                            }
                          </td>
                          <td>
                            <a class="btn btn-success" href="#">
                              <i class="fa fa-search-plus "></i>
                            </a>
                            <a class="btn btn-info" href="#">
                              <i class="fa fa-edit "></i>
                            </a>
                            <a class="btn btn-danger" href="#">
                              <i class="fa fa-trash-o "></i>
                            </a>
                          </td>
                        </tr>
                      }
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


    @section Scripts{
      <script src="~/Content/DataTables-1.10.16/js/jquery.dataTables.js"></script>
      <script src="~/Content/DataTables-1.10.16/js/dataTables.bootstrap4.js"></script>
      <script src="~/vendors/datatables/js/datatables.js"></script>
      <script>
        $(function () {
          $('#dataTable').DataTable();
        });
      </script>
    }